BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: number_input
            multiline: False
            on_text: app. handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increase(1)
            Button:
                text:'Down'
                on_press: app.handle_increase(-1)
    #Button:
    #    text: 'Convert Miles to Kilometres'
    #    on_press: app.handle_calculate()
    Label:
        text: app.message
        color: (1, 1, 0, 1)